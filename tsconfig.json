{
  "include": ["types/**/*", "src/**/*"],
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "lib": ["DOM", "ESNext"],
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "inlineSourceMap": true,
    "sourceRoot": "http://localhost:8000/sources/",
    "strict": true,
    "rootDir": "src/",
    "outDir": "dist/",
    "baseUrl": "src/",
    "paths": {
      "/*": ["*"],
      "@ns": ["../types/NetscriptDefinitions.d.ts"]
    }
  }
}
