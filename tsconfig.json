{
  "include": ["NetscriptDefinitions.d.ts", "global.d.ts", "src/**/*"],
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "lib": ["DOM", "ESNext"],
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "sourceRoot": "http://localhost:8000/sources/",
    "strict": true,
    "rootDir": "src/",
    "outDir": "dist/",
    "baseUrl": "src/",
    "paths": {
      "/*": ["*"],
      "@ns": ["../NetscriptDefinitions.d.ts"]
    }
  }
}
